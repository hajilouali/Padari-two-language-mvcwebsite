@model DoormatWebSite.Models.Model.ourClients

@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Create", "ourClients", FormMethod.Post, new { enctype = "multipart/form-data" })) 
        {
            @Html.AntiForgeryToken()
    
            <div class="form-horizontal">
        
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="validatedCustomFile" name="Image" required="">
                            <label class="custom-file-label" for="validatedCustomFile">@DoormatWebSite.Areas.Admin.Resource.Admin.Choosefile</label>
                            <div class="invalid-feedback">@DoormatWebSite.Areas.Admin.Resource.Admin.required</div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@DoormatWebSite.Areas.Admin.Resource.Admin.Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



