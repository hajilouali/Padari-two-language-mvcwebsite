@using DoormatWebSite.Tools
@model IEnumerable<DoormatWebSite.Models.Model.Post>
<div class="blg-rlt-wrp">
    <div class="tl-stl">
        @if (System.Globalization.CultureInfo.CurrentCulture.Name.Contains("fa"))
        {
            <h4 itemprop="headline">پست های <span>مرتبط</span></h4>
        }
        else
        {
            <h4 itemprop="headline"><span>Rela</span>ted Post</h4>
        }
    </div>
    <div class="remove-ext5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-sm-6 col-lg-6">
                    <div class="post-bx text-center">
                        <div class="post-thumb hrz brd-rd3">
                            <a href="/Posts/@item.PostType.Title/@item.PostTitle" title="" itemprop="url"><img src="/PageImages/@item.PostImage" alt="@item.PostTitle" itemprop="image"></a>
                        </div>
                        <div class="post-info">
                            <h4 itemprop="headline"><a href="/Posts/@item.PostType.Title/@item.PostTitle" title="" itemprop="url">@item.PostTitle</a></h4>
                            <ul class="post-meta">
                                @if (System.Globalization.CultureInfo.CurrentCulture.Name.Contains("fa"))
                                {
                                <li> <a href="#" title="" itemprop="url">@item.AspNetUsers.UserName</a>  توسط</li>
                                    <li>@Convert.ToString(item.PostDate.toshamsi()) <a href="#" title="" itemprop="url">@item.PostType.Title</a></li>
                                }
                                else
                                {
                                    <li>By <a href="#" title="" itemprop="url">@item.AspNetUsers.UserName</a></li>
                                    <li> <a href="#" title="" itemprop="url">@item.PostType.Title</a> @Convert.ToString(item.PostDate.ToString("MMMM dd yyyy"))</li>
                                }

                            </ul>
                            <p itemprop="description">@Html.Raw(item.PostShortDiscription)</p>
                            <a class="theme-btn hrz brd-rd3 theme-bf-bg" href="/Posts/@item.PostType.Title/@item.PostTitle" title="" itemprop="url">@DoormatWebSite.Resources.Resource.ReadMore</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>